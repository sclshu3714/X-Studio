    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <Button
                Command="{Binding ReGenerateCommand}"
                CommandParameter="{Binding}"
                Content="生 成"
                Style="{StaticResource MahApps.Styles.Button}" />
        </ToolBar>
        <DataGrid
            x:Name="CourseDataGrid"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            AllowDrop="True"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            ColumnHeaderStyle="{StaticResource MahApps.Styles.DataGridColumnHeader}"
            Focusable="True"
            GridLinesVisibility="All"
            HeadersVisibility="All"
            HorizontalScrollBarVisibility="Auto"
            ItemsSource="{Binding TimetableRows}"
            PreviewDragOver="CourseDataGrid_DragOver"
            PreviewDrop="CourseDataGrid_Drop"
            RowHeaderWidth="1"
            RowHeight="45"
            SelectionMode="Single"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Resources>
                <Style x:Key="theMondayCellStyle" TargetType="DataGridCell">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="Foreground" Value="{Binding MondayForeground}" />
                    <Setter Property="Background" Value="{Binding MondayBackground}" />
                </Style>
                <Style x:Key="theTuesdayCellStyle" TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding TuesdayForeground}" />
                    <Setter Property="Background" Value="{Binding TuesdayBackground}" />
                </Style>
                <Style x:Key="theWednesdayCellStyle" TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding WednesdayForeground}" />
                    <Setter Property="Background" Value="{Binding WednesdayBackground}" />
                </Style>
                <Style x:Key="theThursdayCellStyle" TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding ThursdayForeground}" />
                    <Setter Property="Background" Value="{Binding ThursdayBackground}" />
                </Style>
                <Style x:Key="theFridayCellStyle" TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding FridayForeground}" />
                    <Setter Property="Background" Value="{Binding FridayBackground}" />
                </Style>
                <Style x:Key="theSaturdayCellStyle" TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding SaturdayForeground}" />
                    <Setter Property="Background" Value="{Binding SaturdayBackground}" />
                </Style>
                <Style x:Key="theSundayCellStyle" TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding SundayForeground}" />
                    <Setter Property="Background" Value="{Binding SundayBackground}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*" Header="时段">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding TimeSlot}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="节次">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Text="{Binding PeriodName}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theMondayCellStyle}"
                    Header="周一">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                Padding="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Monday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Monday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Monday, Mode=TwoWay}"
                                Text="{Binding Monday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theTuesdayCellStyle}"
                    Header="周二">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Tuesday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Tuesday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Tuesday, Mode=TwoWay}"
                                Text="{Binding Tuesday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theWednesdayCellStyle}"
                    Header="周三">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Wednesday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Wednesday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Wednesday, Mode=TwoWay}"
                                Text="{Binding Wednesday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theThursdayCellStyle}"
                    Header="周四">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Thursday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Thursday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Thursday, Mode=TwoWay}"
                                Text="{Binding Thursday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theFridayCellStyle}"
                    Header="周五">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Friday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Friday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Friday, Mode=TwoWay}"
                                Text="{Binding Friday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theSaturdayCellStyle}"
                    Header="周六">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Saturday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Saturday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Saturday, Mode=TwoWay}"
                                Text="{Binding Saturday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="*"
                    CellStyle="{StaticResource theSundayCellStyle}"
                    Header="周日">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                AllowDrop="True"
                                Background="{Binding Sunday.Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Foreground="{Binding Sunday.Foreground}"
                                IsReadOnly="True"
                                PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                                Tag="{Binding Sunday, Mode=TwoWay}"
                                Text="{Binding Sunday.Content, Mode=TwoWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>

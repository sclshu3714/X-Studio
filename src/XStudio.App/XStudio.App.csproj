      <None Include="Resources\Themes\Basic\Geometries.xaml" />
      <None Include="Resources\Themes\SkinDark.xaml" />
      <None Include="Resources\Themes\SkinDefault.xaml" />
      <None Include="Resources\Themes\Styles\Style.xaml" />
      <None Include="Resources\Themes\Theme.xaml" />
    </ItemGroup>

    <ItemGroup>
      <Resource Include="Views\icon.ico" />
    </ItemGroup>

</Project>

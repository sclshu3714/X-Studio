      <Page Remove="Resources\Themes\Basic\Fonts.xaml" />
      <Page Remove="Resources\Themes\Basic\Geometries.xaml" />
      <Page Remove="Resources\Themes\SkinDark.xaml" />
      <Page Remove="Resources\Themes\SkinDefault.xaml" />
      <Page Remove="Resources\Themes\Styles\Style.xaml" />
      <Page Remove="Resources\Themes\Theme.xaml" />
      <Content Include="appsettings.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <None Include="Resources\Themes\Basic\Basic.xaml" />
      <None Include="Resources\Themes\Basic\Brushes.xaml" />
      <None Include="Resources\Themes\Basic\Colors\Colors.xaml" />
